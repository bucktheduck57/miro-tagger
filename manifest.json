{
  "name": "Hashtag to Tag Converter",
  "description": "Convert hashtags in sticky notes into tags.",
  "icons": {
    "48": "https://miro.com/favicon.ico",
    "128": "https://miro.com/favicon.ico"
  },
  "permissions": [
    "boards:read",
    "boards:write",
    "widgets:read",
    "widgets:write",
    "tags:read",
    "tags:write"
  ],
  "start_url": "index.html",
  "web_accessible_resources": ["index.html"],
  "oauth2": {
    "client_id": "replace-this-with-your-client-id",
    "scopes": "boards:read boards:write"
  }
}
